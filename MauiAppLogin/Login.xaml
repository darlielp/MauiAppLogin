<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppLogin.Login"
             Title="Login">
    <VerticalStackLayout VerticalOptions="Center" Spacing="10" Padding="10">
        <Label 
            Text="Sistema de login"
            HorizontalOptions="Center" />
        
        <!--Usuário-->
        <Label Text="Usuário"/>
        <Entry x:Name="usuario"/>
        
        <!--Senha-->
        <Label Text="Senha"/>
        <Entry x:Name="senha" IsPassword="True"/>
        
        <!--Entrar-->
        <Button Text="Entrar" Clicked="Button_Clicked" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>